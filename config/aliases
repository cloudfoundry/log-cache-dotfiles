#!/bin/bash

# git
alias gpr="git pull --rebase"
alias gpp="git pull --rebase && git push"
alias gs="git status"
alias gst="git status"

# system
alias ll="ls -la"
alias lal="ls -lA"
alias grep='grep --color=auto'
alias nocaps='/usr/bin/setxkbmap -layout us -option ctrl:nocaps'
alias blc='bosh -e lite -d cf'
alias python='python3'
alias pip='pip3'
alias flyl='fly -t log-cache'
alias flyp='fly -t prod'

# environments
alias satsuma='cd ~/workspace/log-cache-deployments/gcp/satsuma'

# projects
alias glc="cd ~/workspace/go-log-cache; tmux_try_rename 'go-lc'"
alias tools="cd ~/workspace/go/src/github.com/log-cache-tools; tmux_try_rename 'lc-tools'"
alias dotfiles="cd ~/workspace/log-cache-dotfiles; tmux_try_rename 'dotfiles'"
alias lcr="cd ~/workspace/log-cache-release; tmux_try_rename 'lcr'"
alias lc="cd ~/workspace/log-cache-release/src/code.cloudfoundry.org/log-cache; tmux_try_rename 'lc'"
alias lcd="cd ~/workspace/log-cache-deployments; tmux_try_rename 'lcd'"
alias ci="cd ~/workspace/log-cache-ci; tmux_try_rename 'CI'"
alias lci="cd ~/workspace/log-cache-ci; tmux_try_rename 'CI'"
alias lcli="cd ~/workspace/log-cache-cli; tmux_try_rename 'lc-cli'"
alias lcatsr="cd ~/workspace/log-cache-acceptance-tests-release; tmux_try_rename 'lcats release'"
alias lcats="cd ~/workspace/log-cache-acceptance-tests-release/src/github.com/cloudfoundry/log-cache-acceptance-tests; tmux_try_rename 'lcats'"
alias lct="cd ~/workspace/go/src/github.com/cloudfoundry-incubator/log-cache-tools; tmux_try_rename 'lc-tools'"
alias cfd="cd ~/workspace/cf-deployment; tmux_try_rename 'cfd'"
alias cats="cd ~/workspace/go/src/github.com/cloudfoundry/cf-acceptance-tests; tmux_try_rename 'cats'"
alias msr="cd ~/workspace/metric-store-release; tmux_try_rename 'msr'"
alias ms="cd ~/workspace/metric-store-release/src/github.com/pivotal/metric-store; tmux_try_rename 'ms'"

# quick logins
alias login='./cf_login'
alias pws='cf login -a api.run.pivotal.io -u cf-log-cache@pivotal.io'
alias quicksatsuma='eval "$(bbl print-env --state-dir ~/workspace/log-cache-deployments/gcp/satsuma)"'
alias prod_target='target_prod'

# wrappers
alias vim='nvim'

# Makes ./ work to reference the current package, e.g.,
# `gomvpkg -from ./foo -to ./bar`
function gomvpkg {
    command gomvpkg $(echo "$@" | sed -e "s, ./, ${PWD##$GOPATH/src/}/,g")
}
